public class Card {
  public int points;
  public int cardNumber;
  public Suit suit;
  
  enum Suit
  {
      DIAMONDS('?'),
      HEARTS('?'),
      SPADES('?'),
      CLUBS('?');
      
      public final char symbol;
      
      Suit(char character)
      {
        this.symbol = character;
      }
  }
  
  public static Card initCard(int number, Suit newSuit){
  
    Card card = new Card();
    card.cardNumber = number;
    
    card.suit = newSuit;
  
    return card;
  }
}